<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/wallpaper_foreground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:background="@color/white">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="40dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginHorizontal="100dp"
            android:src="@mipmap/account"
            android:id="@+id/account_image"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/account_image"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:id="@+id/icon_name"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/icon_name"
            android:layout_below="@+id/account_image"
            android:layout_marginTop="60dp"
            android:hint="Nama"
            android:layout_marginLeft="20dp"
            android:id="@+id/eNama"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/icon_name"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_email_24"
            android:id="@+id/icon_email"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/icon_email"
            android:layout_below="@+id/eNama"
            android:layout_marginTop="30dp"
            android:hint="Email"
            android:layout_marginLeft="20dp"
            android:id="@+id/eEmail"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/icon_email"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_phone_24"
            android:id="@+id/icon_telp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/icon_email"
            android:layout_below="@+id/eEmail"
            android:layout_marginTop="30dp"
            android:hint="Telp"
            android:layout_marginLeft="20dp"
            android:id="@+id/eTelp"
            android:inputType="textPhonetic"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:background="@color/light_blue_D4"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:id="@+id/submit"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"/>
    </RelativeLayout>

</LinearLayout>